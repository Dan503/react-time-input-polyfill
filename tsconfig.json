{
	"jsx": "react",
	"compilerOptions": {
		"target": "es5",
		"declaration": true,
		"lib": ["dom", "esnext"],
		"types": ["cypress"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"outDir": "npm",
		"noFallthroughCasesInSwitch": true
	},
	"files": ["./index.tsx"],
	"include": ["src/core/**/*.ts", "src/core/**/*.tsx", "cypress/**/*.ts"],
	"exclude": ["node_modules"]
}
